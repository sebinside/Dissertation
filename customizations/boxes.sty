
% Box template
\newcommand{\highlight}[3]{%
  \begin{tcolorbox}[
    colback=black!2!white,
    colframe=white!20!black,
    center,
    valign=top,
    halign=left,
    before skip=0.3cm,
    after skip=0.4cm,
    center title,
    boxrule=1pt,
    boxsep=-2pt,
    top=7pt,
    bottom=7pt,
    left=10pt,
    right=10pt,
    width=\linewidth
  ]
  #1\xspace\textbf{#2:} #3
  \end{tcolorbox}
}


